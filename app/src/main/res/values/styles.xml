<?xml version="1.0" encoding="utf-8"?>
<resources>






    <style name="button_style">
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/inder</item>
        <item name="cornerRadius">30dp</item>
        <item name="backgroundTint">#000000</item>
        <item name="android:lineHeight">45sp</item>
        <item name="android:textColor">#FFFFFF</item>


    </style>

    <style name="inputText">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">26sp</item>
        <item name="lineHeight">31sp</item>
        <item name="android:textColor">#6B6B6B</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="text_field">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeErrorColor">#D81B60</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="text_field_font">
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textSize">20sp</item>

    </style>


</resources>
